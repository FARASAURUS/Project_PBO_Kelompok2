<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="152.0" prefWidth="590.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="carcruiser.GameOverController">
   <children>
      <!-- Background Image -->
      <ImageView fitHeight="450.0" fitWidth="641.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Image/Background.jpg" />
         </image>
      </ImageView>

      <!-- Hero Image -->
      <ImageView fitHeight="284.0" fitWidth="531.0" layoutX="68.0" layoutY="-18.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Image/GameOver.png" />
         </image>
      </ImageView>

      <!-- Score Label -->
      <Label fx:id="ScoreLabel" alignment="CENTER" layoutX="247.0" layoutY="201.0" prefHeight="24.0" prefWidth="146.0" style="-fx-background-color: red; -fx-background-radius: 200; -fx-font-weight: bold;" text="Your Score : 0" textFill="WHITE" textOverrun="WORD_ELLIPSIS" />

      <!-- Additional Image (Character or Decoration) -->
      <ImageView fitHeight="155.0" fitWidth="284.0" layoutX="182.0" layoutY="189.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Image/PlayAgain.png" />
         </image>
      </ImageView>

      <!-- Yes Button -->
      <ImageView fx:id="YesButton" fitHeight="47.0" fitWidth="134.0" layoutX="195.0" layoutY="297.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Image/YesButton.png" />
         </image>
      </ImageView>

      <!-- No Button -->
      <ImageView fx:id="NoButton" fitHeight="54.0" fitWidth="122.0" layoutX="345.0" layoutY="294.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Image/NoButton.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
